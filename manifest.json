{
  "manifest_version": 3,
  "name": "SaatvaAI",
  "version": "1.0",
  "description": "SaatvaAI, a chatbot extension to \"talk\" to the Saatva website and its products",
  "permissions": [
    "activeTab", 
    "sidePanel", 
    "tabs",
    "storage",
    "webNavigation", 
    "webRequest",
    "scripting"
  ],
  "host_permissions": ["*://*/*"],
  "icons": {
    "16": "icon16.png",
    "19": "icon19.png",
    "32": "icon32.png",
    "38": "icon38.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SaatvaAI - Your Saatva Companion"
  }
}
